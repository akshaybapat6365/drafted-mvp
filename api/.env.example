# API config (FastAPI)
# Copy to `api/.env` and edit as needed.
APP_ENV=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security (use at least 32 bytes for HS256)
JWT_SECRET=dev-only-secret-change-me-please-use-at-least-32-bytes
JWT_ISSUER=drafted-mvp
JWT_TTL_SECONDS=604800

# Storage/DB
# VAR_DIR defaults to `api/var`
# DATABASE_URL defaults to sqlite file under VAR_DIR
# VAR_DIR=/Users/akshaybapat/drafted-mvp/api/var
# DATABASE_URL=sqlite:////Users/akshaybapat/drafted-mvp/api/var/drafted.db
# REDIS_URL=redis://127.0.0.1:6379/0

# Gemini (optional)
GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_TEXT_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL_PREVIEW=gemini-3-pro-image-preview
GEMINI_IMAGE_MODEL_FINAL=gemini-3-pro-image-preview

# Job controls
JOB_MAX_RETRIES=2
IDEMPOTENCY_WINDOW_SECONDS=86400
TRANSIENT_STUB_ENABLED=false
TRANSIENT_STUB_FAIL_FIRST_N=0
TRANSIENT_STUB_FAIL_EVERY_N=0
TRANSIENT_STUB_HTTP_CODE=503
TRANSIENT_STUB_SCOPE=spec
RUN_INPROCESS_WORKER=true
WORKER_POLL_INTERVAL_SECONDS=1.0
WORKER_HEARTBEAT_TTL_SECONDS=120
